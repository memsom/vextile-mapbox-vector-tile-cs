<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Configurations>Debug;Release</Configurations>
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Title>Mapbox Vector Tile Reader</Title>
    <Copyright>Copyright (c) 2017, Mapbox</Copyright>
    <PackageProjectUrl>https://github.com/mapbox/vector-tile-cs</PackageProjectUrl>
    <PackageLicense>https://github.com/mapbox/vector-tile-cs/blob/master/LICENSE</PackageLicense>
    <PackageIcon>mapbox.png</PackageIcon>
    <RepositoryUrl>https://github.com/mapbox/vector-tile-cs</RepositoryUrl>
    <RootNamespace>Mapbox.VectorTile</RootNamespace>
    <AssemblyName>Mapbox.VectorTile.VectorTileReader</AssemblyName>
    <Nullable>disable</Nullable>
    <PackageReadmeFile>packagereadme.md</PackageReadmeFile>
    <Version>1.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\..\readme\packagereadme.md" Pack="true" PackagePath="\" />
  </ItemGroup>
  <!--Package Icon Include -->
  <ItemGroup>
    <None Include="..\..\..\images\mapbox.png" Pack="true" PackagePath="\" />
  </ItemGroup>
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <AppDesignerFolder>Properties</AppDesignerFolder>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'Debug|AnyCPU'">
    <DebugSymbols>true</DebugSymbols>
    <OutputPath>bin\Debug\</OutputPath>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <DebugType>portable</DebugType>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <ErrorReport>prompt</ErrorReport>
    <CodeAnalysisRuleSet>MinimumRecommendedRules.ruleset</CodeAnalysisRuleSet>
    <Prefer32Bit>false</Prefer32Bit>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'Release|AnyCPU'">
    <OutputPath>bin\Release\</OutputPath>
    <DefineConstants>TRACE</DefineConstants>
    <Optimize>true</Optimize>
    <DebugType>portable</DebugType>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <ErrorReport>prompt</ErrorReport>
    <CodeAnalysisRuleSet>MinimumRecommendedRules.ruleset</CodeAnalysisRuleSet>
    <Prefer32Bit>false</Prefer32Bit>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Geometry\Mapbox.VectorTile.Geometry.csproj"/>
    <ProjectReference Include="..\PbfReader\Mapbox.VectorTile.PbfReader.csproj"/>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="NLog"/>
  </ItemGroup>
</Project>
